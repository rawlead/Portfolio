{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "src/particles.js"
    ]
  },
  "rules": {
    "interface-name": [true, "never-prefix"],
    "no-empty-interface": false,
    "array-type": [true, "generic"],
    "member-access": [true, "no-public"],
    "ordered-imports": false,
    "object-literal-sort-keys": false
  }
}
